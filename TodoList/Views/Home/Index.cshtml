@model IEnumerable<TodoList.Entities.TodoItem>
<html >
<head>
    <title>Todo list</title>
    <link href="~/StyleSheet.css" rel="stylesheet" />
    <link href="~/StyleIndex.css" rel="stylesheet" />
</head>
<body>
    <div class="content">
        <h1 class="title">Todo</h1>
        <div class="listItems">
            <ol>
                @foreach (var item in Model)
                {
                    <li>
                        @Html.ActionLink(item.ItemName + " | " + item.ItemDetails, "Details", new { id = item.ItemId })
                        @if (!item.IsItemComplete)
                        {
                            <span>❌</span>
                        }
                        else
                        {
                            <span>✔️</span>
                        }
                    </li>
                }
            </ol>
        </div>
        <div class="addItemButton">
            @Html.ActionLink("Add item", "AddItem")
        </div>
    </div>



</body>
</html>